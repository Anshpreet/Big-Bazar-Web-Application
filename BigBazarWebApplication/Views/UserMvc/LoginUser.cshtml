@model BigBazarWebApplication.Models.UserModel

@{
    ViewBag.Title = "LoginUser";
}
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript">

        //$(document).ready(function () {

         var val = @Html.Raw( @ViewBag.ErrorMessage);
         alert(@ViewBag.ErrorMessage);

        //});
    </script>
</head>

<body>
    <h2>User Login</h2>
    <p style="color:orangered">@ViewBag.ErrorMessage</p> 

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-default" />
                </div>
            </div>
        </div>
    }



    @*<div>
            @Html.ActionLink("Back", "Index", "Home")
        </div>*@

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

    <script type="text/javascript">

        
         var val = @Html.Raw( @ViewBag.ErrorMessage);
         alert(@ViewBag.ErrorMessage);

     
    </script>

</body>
